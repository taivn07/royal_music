<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/width_button"
    android:background="@color/colorbutton"
    android:id="@+id/layoutButton"
    android:weightSum="2">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/width_button"
        android:layout_weight="1"
        android:id="@+id/btnAllPlay"
        android:background="@color/colorbutton"
        android:drawableLeft="@drawable/repeat"
        android:text="@string/allplay"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginLeft="40dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/width_button"
        android:layout_weight="1"
        android:id="@+id/btnShuffle"
        android:background="@color/colorbutton"
        android:drawableLeft="@drawable/shuffle"
        android:text="@string/shufle"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginRight="40dp"/>
</LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutButton"
        android:id="@+id/lvPlaylist"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"></ListView>
</RelativeLayout>